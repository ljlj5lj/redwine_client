<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/lightgrey"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/evaluation_redwine"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红酒"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/evaluation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="2016-10-15"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@drawable/line"/>
    <RatingBar
        android:id="@+id/evaluation_grade"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_margin="10dp"
        android:max="5"
        android:stepSize="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/evaluation_content"
        android:textColor="@color/midblack"
        android:text="就可怜的减肥快乐圣诞节快乐圣诞节疯狂老师的就分手的快乐就"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
