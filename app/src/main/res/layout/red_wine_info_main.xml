<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:scrollbars="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:background="@color/lightgrey"
        android:layout_width="match_parent"
        android:layout_height="13dp" />
    <!--红酒图片-->
    <ImageView
        android:id="@+id/redwine_img"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!--红酒名-->
    <TextView
        android:id="@+id/redwine_name"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智利圣钻玩收藏白葡萄酒"
        android:textColor="@color/sienna"
        android:textSize="18sp"/>
    <!--红酒价格-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ "
            android:textSize="18sp"
            android:textColor="@color/orchid"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/redwine_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/orchid"
            android:text="199.00"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:background="@drawable/free_postage"/>
    </LinearLayout>
    <!--介绍内容-->
    <TextView
        android:id="@+id/redwine_description"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="一款真正的黄金液体，送给闺蜜最甜蜜的问候一款真正的黄金液体，送给闺蜜最甜蜜的问候"/>

    <!--基本信息-->
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/line_horizontal_red"/>
        <TextView
            android:layout_margin="4dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:text="基本信息"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/line_horizontal_red"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产地 :"/>
            <TextView
                android:id="@+id/redwine_origin"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美国"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年份 :"/>
            <TextView
                android:id="@+id/redwine_vintage"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒精度 :"/>
            <TextView
                android:id="@+id/redwine_alcohol"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14.5"/>
            <TextView
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="容量 :"/>
            <TextView
                android:id="@+id/redwine_capacity"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="750"/>
            <TextView
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ml"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/lightgrey"
        android:layout_width="match_parent"
        android:layout_height="13dp" />
    <RelativeLayout
        android:id="@+id/question_ask"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/solution"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/question"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/solution"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题咨询"/>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/right_arrow"/>
    </RelativeLayout>
    <View
        android:background="@color/lightgrey"
        android:layout_width="match_parent"
        android:layout_height="13dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/main_color"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红酒简介" />
        <TextView
            android:layout_toLeftOf="@+id/redwine_date"
            android:layout_margin="8dp"
            android:text="上架日期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/redwine_date"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:text="2016-16-10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:textColor="@color/midblack"
        android:text=""
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redwine_introduce"/>
</LinearLayout>
</ScrollView>