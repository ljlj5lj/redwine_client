<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <CheckBox
        android:layout_alignParentLeft="true"
        android:id="@+id/shopping_cart_allcheck"
        android:layout_marginLeft="5dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"/>
    <TextView
        android:layout_toRightOf="@+id/shopping_cart_allcheck"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全选"/>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/total_price_text"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总计"
        android:textColor="@color/midblack"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/total_price_text"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="¥"
        android:textStyle="italic"
        android:layout_marginRight="5dp"
        android:textColor="@color/main_color"/>
    <TextView
        android:id="@+id/total_price"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="italic"
        android:textColor="@color/main_color"
        android:textSize="17sp"
        android:layout_toLeftOf="@+id/purchase_now_layout"/>
    <!--立即结算-->
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:id="@+id/purchase_now_layout"
        android:gravity="center"
        android:background="@color/main_color"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即结算"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>
