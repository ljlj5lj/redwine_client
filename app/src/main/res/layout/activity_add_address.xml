<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgrey"
    tools:context="com.example.lj.redwine.activity.AddAddressActivity">
    <include layout="@layout/topbar_back_img"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系人"
        android:textSize="15sp"
        android:textColor="@color/gray"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <com.example.lj.redwine.custom_widget.edittext_clear.ClearEditText
                android:background="@color/white"
                android:id="@+id/edit_name"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:hint="请填写收货人姓名"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radioGroup"
                android:contentDescription="性别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radioMale"
                    android:checked="true"
                    android:text="先生"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/radioFemale"
                    android:text="女士"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机:"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <com.example.lj.redwine.custom_widget.edittext_clear.ClearEditText
                android:id="@+id/edit_phone"
                android:background="@color/white"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:hint="请填写收货人手机号码"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货地址"
        android:textSize="15sp"
        android:textColor="@color/gray"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/location_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位地址:"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/location"/>
            <com.example.lj.redwine.custom_widget.edittext_clear.ClearEditText
                android:id="@+id/edit_location_address"
                android:background="@color/white"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="选择定位地址"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="14sp" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/right_arrow"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址:"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <com.example.lj.redwine.custom_widget.edittext_clear.ClearEditText
                android:id="@+id/edit_detail_address"
                android:background="@color/white"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:hint="如楼号-门牌号"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
