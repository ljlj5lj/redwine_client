<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/advertisement_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.lj.redwine.custom_widget.viewpager_autoscroll.AutoScrollViewPager
            android:id="@+id/auto_scroll_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.example.lj.redwine.custom_widget.viewpager_autoscroll.CirclePageIndicator
            android:id="@+id/circle_indicator"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </RelativeLayout>
</LinearLayout>

