<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/redwine_layout"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/redwine_img"
        android:layout_margin="10dp"
        android:layout_width="75dp"
        android:layout_height="75dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--红酒名及酿造年份-->
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/redwine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/midblack"
                android:textSize="14sp"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/redwine_vintage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/grey"
                android:text="年份 " />
            <TextView
                android:layout_centerInParent="true"
                android:textSize="11sp"
                android:id="@+id/redwine_vintage"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text=""/>
        </RelativeLayout>
        <!--红酒简介-->
        <TextView
            android:id="@+id/redwine_description"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text=""/>
        <!--红酒销量及价格-->
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/red_wine_price_text"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ "
                android:textColor="@color/main_color"
                android:textSize="12sp"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/red_wine_price_text"
                android:id="@+id/redwine_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_color"
                android:textSize="12sp"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/redwine_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量  "
                android:textSize="11sp"
                android:textColor="@color/lightgray"/>
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/redwine_sales"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11sp"
                android:textColor="@color/lightgray"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="热销红酒"
            android:textColor="@color/orange"/>
        <!--线-->
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line_horizontal"/>
    </LinearLayout>

</LinearLayout>
