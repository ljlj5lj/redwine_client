<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/red_wine_img"
        android:layout_margin="10dp"
        android:layout_width="85dp"
        android:layout_height="65dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--红酒名及酿造年份-->
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/red_wine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/midblack"
                android:textSize="14sp"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/red_wine_vintage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:text="年份 " />
            <TextView
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:id="@+id/red_wine_vintage"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text=""/>
        </RelativeLayout>
        <!--红酒销量及价格-->
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/red_wine_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_marginRight="2dp"
                android:textColor="@color/main_color"
                android:textSize="13sp"/>
            <TextView
                android:layout_marginRight="2dp"
                android:id="@+id/red_wine_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_color"
                android:textSize="14sp"/>
            <ImageView
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                android:layout_width="2px"
                android:layout_height="10dp"
                android:background="@drawable/line_vertical"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量"
                android:layout_marginRight="2dp"
                android:textSize="12sp"
                android:textColor="@color/orange"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/red_wine_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/orange"/>
        </LinearLayout>
        <!--红酒上架时间-->
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="上架时间"/>
            <TextView
                android:id="@+id/red_wine_register_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text=""/>
        </RelativeLayout>
        <!--线-->
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line_horizontal"/>
    </LinearLayout>

</LinearLayout>