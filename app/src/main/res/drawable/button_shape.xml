<?xml version="1.0" encoding="UTF-8"?> 
<shape 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle"> 
    <!-- 填充的颜色 -->
    <solid android:color="@color/main_color" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形半径 -->
    <corners android:radius="8dip" />
      
<!-- padding:Button里文字与button边间间距 -->
<padding 
   android:left="13dp"
   android:right="13dp" />
</shape>
